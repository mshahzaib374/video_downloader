<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >



    <TextView
        android:id="@+id/settings_tv"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/app_bar_bg"
        android:gravity="center_vertical"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/manropeextrabold"
        android:textColor="#ffffff"
        android:paddingHorizontal="@dimen/_16sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/settings"
        />



    <ImageView
        android:id="@+id/language_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/language_icon"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_tv"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/language_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center_vertical"
        android:text="@string/language"
        android:textColor="@color/splash_screen_title_color"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/language_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@id/language_icon"
        app:layout_constraintTop_toTopOf="@+id/language_icon" />

    <ImageView
        android:id="@+id/feedback_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/feedback_icon"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/language_icon"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/feedback_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center_vertical"
        android:text="@string/feedback"
        android:textColor="@color/splash_screen_title_color"
        app:layout_constraintBottom_toBottomOf="@+id/feedback_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/feedback_icon"
        app:layout_constraintTop_toTopOf="@+id/feedback_icon" />

    <ImageView
        android:id="@+id/privacy_policy_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:src="@drawable/privacy_policy_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/feedback_icon"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/privacy_policy_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:gravity="center_vertical"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:text="@string/privacy_policy"
        android:textColor="@color/splash_screen_title_color"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toEndOf="@id/privacy_policy_icon"
        app:layout_constraintTop_toBottomOf="@id/feedback_tv" />

    <ImageView
        android:id="@+id/rate_us_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/rate_us_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/privacy_policy_icon"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/rate_us_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="@string/rate_us"
        android:textColor="@color/splash_screen_title_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toEndOf="@id/rate_us_icon"
        app:layout_constraintTop_toBottomOf="@id/privacy_policy_tv" />

    <ImageView
        android:id="@+id/share_with_friends_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/share_with_friends_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rate_us_icon"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/share_with_friends_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:fontFamily="@font/poppinsmedium"
        android:text="@string/share_with_friends"
        android:layout_marginTop="@dimen/_16sdp"
        android:textColor="@color/splash_screen_title_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toEndOf="@id/share_with_friends_icon"
        app:layout_constraintTop_toBottomOf="@id/rate_us_tv" />

    <ImageView
        android:id="@+id/how_use_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/group_1000004143"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share_with_friends_icon"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/how_to_use_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:fontFamily="@font/poppinsmedium"
        android:text="@string/how_to_use"
        android:layout_marginTop="@dimen/_16sdp"
        android:textColor="@color/splash_screen_title_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toEndOf="@id/how_use_icon"
        app:layout_constraintTop_toBottomOf="@id/share_with_friends_tv" />


    <ImageView
        android:id="@+id/upgrade_to_premium_card"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/upgrade_to_premium_card"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/how_to_use_tv"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/upgrade_to_premium_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinssemibold"
        android:text="@string/upgrade_to_premium"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/upgrade_to_premium_card"
        app:layout_constraintEnd_toEndOf="@id/upgrade_to_premium_card"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="@id/upgrade_to_premium_card"
        app:layout_constraintTop_toTopOf="@id/upgrade_to_premium_card"
        app:layout_constraintVertical_bias="0.27" />

    <TextView
        android:id="@+id/remove_ads_permanently_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:text="@string/remove_ads_permanently"
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintBottom_toBottomOf="@id/upgrade_to_premium_card"
        app:layout_constraintEnd_toEndOf="@id/upgrade_to_premium_tv"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="@id/upgrade_to_premium_tv"
        app:layout_constraintTop_toBottomOf="@id/upgrade_to_premium_tv"
        app:layout_constraintVertical_bias="0.25" />

    <ImageView
        android:id="@+id/crown_icon_premium"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/crown_icon"
        app:layout_constraintBottom_toBottomOf="@id/upgrade_to_premium_card"
        app:layout_constraintEnd_toEndOf="@id/upgrade_to_premium_card"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toEndOf="@id/upgrade_to_premium_tv"
        app:layout_constraintTop_toTopOf="@id/upgrade_to_premium_card"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>