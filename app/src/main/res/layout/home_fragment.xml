    </androidx.cardview.widget.CardView>


    <FrameLayout
        android:id="@+id/homeFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F0FF"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/card_view_dashboard_home_upper"
        android:layout_marginVertical="@dimen/_16sdp">


        <include
            layout="@layout/banner_loading_ad"
            android:layout_width="match_parent"
            android:layout_height="80dp" />


    </FrameLayout>


    <TextView
        android:id="@+id/other_social_platforms_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manropebold"
        android:text="@string/other_social_platforms"
        android:textColor="@color/very_dark_grey"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view_dashboard_home_upper"
        app:layout_constraintVertical_bias="0.070000002" />

    <ImageView
        android:id="@+id/twitter_card_home_fragment"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_65sdp"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/twitter_card_home_fragment"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/other_social_platforms_tv"
        app:layout_constraintVertical_bias="0.060000002"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/twitter_icon"
        android:layout_width="@dimen/_49sdp"
        android:layout_height="wrap_content"
        android:src="@drawable/twitter_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/twitter_card_home_fragment"
