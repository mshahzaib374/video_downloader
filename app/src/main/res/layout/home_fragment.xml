        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/twitter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fontFamily="@font/manropebold"
        android:text="@string/twitter"
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/twitter_icon"
        app:layout_constraintStart_toStartOf="@id/twitter_icon"
        app:layout_constraintTop_toBottomOf="@id/twitter_icon"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/fb_card_home_fragment"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_65sdp"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/twitter_card_home_fragment"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toEndOf="@id/twitter_card_home_fragment"
        app:layout_constraintTop_toBottomOf="@id/other_social_platforms_tv"
        app:layout_constraintVertical_bias="0.060000002"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/fb_icon"
        android:layout_width="@dimen/_49sdp"
        android:layout_height="wrap_content"
        android:src="@drawable/fb_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/fb_card_home_fragment"
        app:layout_constraintEnd_toEndOf="@id/fb_card_home_fragment"
        app:layout_constraintStart_toStartOf="@id/fb_card_home_fragment"
        app:layout_constraintTop_toTopOf="@id/fb_card_home_fragment"
        app:layout_constraintVertical_bias="0.25"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/fb_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:fontFamily="@font/manropebold"
        android:text="@string/facebook"
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/fb_icon"
        app:layout_constraintStart_toStartOf="@id/fb_icon"
        app:layout_constraintTop_toBottomOf="@id/fb_icon"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/insta_card_home_fragment"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_65sdp"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/twitter_card_home_fragment"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toEndOf="@id/fb_card_home_fragment"
        app:layout_constraintTop_toBottomOf="@id/other_social_platforms_tv"
        app:layout_constraintVertical_bias="0.060000002"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/insta_icon"
        android:layout_width="@dimen/_49sdp"
        android:layout_height="wrap_content"
        android:src="@drawable/insta_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/insta_card_home_fragment"
        app:layout_constraintEnd_toEndOf="@id/insta_card_home_fragment"
        app:layout_constraintStart_toStartOf="@id/insta_card_home_fragment"
        app:layout_constraintTop_toTopOf="@id/insta_card_home_fragment"
        app:layout_constraintVertical_bias="0.25"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/insta_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fontFamily="@font/manropebold"
        android:text="@string/instagram"
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/insta_icon"
        app:layout_constraintStart_toStartOf="@id/insta_icon"
        app:layout_constraintTop_toBottomOf="@id/insta_icon"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/daily_motion_card_home_fragment"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_65sdp"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/twitter_card_home_fragment"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@id/insta_card_home_fragment"
        app:layout_constraintTop_toBottomOf="@id/other_social_platforms_tv"
        app:layout_constraintVertical_bias="0.060000002"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/daily_motion_icon"
        android:layout_width="@dimen/_49sdp"
        android:layout_height="wrap_content"
        android:src="@drawable/daily_motion_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/daily_motion_card_home_fragment"
        app:layout_constraintEnd_toEndOf="@id/daily_motion_card_home_fragment"
        app:layout_constraintStart_toStartOf="@id/daily_motion_card_home_fragment"
        app:layout_constraintTop_toTopOf="@id/daily_motion_card_home_fragment"
        app:layout_constraintVertical_bias="0.30"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/daily_motion_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fontFamily="@font/manropebold"
        android:text="@string/dailymotion"
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/daily_motion_icon"
        app:layout_constraintStart_toStartOf="@id/daily_motion_icon"
        app:layout_constraintTop_toBottomOf="@id/daily_motion_icon"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/recent_downloads_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manropebold"
        android:text="@string/recent_downloads"
        android:textColor="@color/very_dark_grey"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/twitter_card_home_fragment"
        app:layout_constraintVertical_bias="0.080000002" />


    <FrameLayout
        android:id="@+id/nativeContainer"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:minWidth="302dp"
        android:background="#F1F0FF"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_dashboard_home_upper" />

    <include
        android:id="@+id/shimmerHomeLayout"
        layout="@layout/shimmer_native_media"
        android:layout_width="0dp"
        android:layout_height="252dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/nativeContainer"
        app:layout_constraintStart_toStartOf="@+id/nativeContainer"
        app:layout_constraintEnd_toEndOf="@+id/nativeContainer"
        app:layout_constraintBottom_toBottomOf="@+id/nativeContainer"/>




</androidx.constraintlayout.widget.ConstraintLayout>