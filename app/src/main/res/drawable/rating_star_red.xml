<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#e0e0e0" /> <!-- Light gray background for unfilled stars -->
            <size android:width="24dp" android:height="24dp" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <shape>
            <solid android:color="#FF0000" /> <!-- Red color for the secondary progress (filled stars) -->
            <size android:width="24dp" android:height="24dp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <shape>
            <solid android:color="#FF0000" /> <!-- Red color for the progress (filled stars) -->
            <size android:width="24dp" android:height="24dp" />
        </shape>
    </item>
</layer-list>
